<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040303"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_green"
        android:onClick="onClickFlash"
        android:shadowColor="#64FF04"
        android:text="@string/on"
        android:textColor="#01F636"
        android:textColorHighlight="#68F106"
        android:textColorHint="#39F306"
        android:textColorLink="#58ED06"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#96FF03"
        app:strokeColor="#11FF00" />

</androidx.constraintlayout.widget.ConstraintLayout>